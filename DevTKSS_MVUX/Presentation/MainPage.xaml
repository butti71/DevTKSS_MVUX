<Page x:Class="DevTKSS_MVUX.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DevTKSS_MVUX.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      xmlns:mvux="using:Uno.Extensions.Reactive.UI"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer>
    <Grid utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}"/>
      <StackPanel Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Spacing="16">
        <mvux:FeedView Source="{Binding TabItems}"
                       Padding="3">
          <mvux:FeedView.ValueTemplate>
            <DataTemplate>
              <utu:TabBar SelectedIndex="1"
                          Style="{StaticResource TopTabBarStyle}"
                          ItemsSource="{Binding Data}">
                <utu:TabBar.ItemTemplate>
                  <DataTemplate>
                    <utu:TabBarItem Content="{Binding}">
                      <utu:TabBarItem.Icon>
                        <SymbolIcon Symbol="Bookmarks"/>
                      </utu:TabBarItem.Icon>
                    </utu:TabBarItem>
                  </DataTemplate>
                </utu:TabBar.ItemTemplate>
              </utu:TabBar>
            </DataTemplate>
          </mvux:FeedView.ValueTemplate>
        </mvux:FeedView>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
